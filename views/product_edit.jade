extends layout_tailwind


block content

    title Editar

    head 
        script(src="/form_edit_product.js" defer)


    body



        form(id="form_edit_product" class="max-w-md mx-auto mb-8 mt-32 p-6 bg-white rounded shadow-2xl")
            input(type="hidden", value=Product.id, name="id")
            div.mb-4
                label(for="name" class="text-gray-700 font-bold mb-2 block") NOMBRE
                input(type="text" name="name" value=`${Product.name}` placeholder=`${Product.name}`  id="name" class="w-full px-3 py-2 leading-tight border rounded appearance-none focus:outline-none focus:shadow-outline")

            div.mb-6
                label(for="description" class="text-gray-700 font-bold mb-2 block") DESCRIPCION
                input(type="text" name="description" value=`${Product.description}` placeholder=`${Product.description}` id="description" class="w-full px-3 py-2 leading-tight border rounded appearance-none focus:outline-none focus:shadow-outline")


            div.mb-3
                label(for="availavility" class="text-gray-700 font-bold") DISPONIBILIDAD
                select(name="availavility" id="availavility" class="dark:border-white-400/20 dark:scale-100 transition-all duration-500 ease-in-out dark:hover:scale-110 dark:checked:scale-100 w-full px-3 py-2 leading-tight border rounded appearance-none focus:outline-none focus:shadow-outline")
                    option(value="agotado" selected=Product.availavility==="agotado") Agotado
                    option(value="disponible" selected=Product.availavility==="disponible") Disponible

            div.mb-3
                label(for="categoryIds" class="text-gray-700 font-bold") CATEGORIAS
                div.flex.flex-wrap
                    each category in Categories
                        div(key=category.id class="mr-4 mb-2")
                            input(type="checkbox" name="categoryIds" id=`category-${category.id}` value=category.id checked=ProductCategory.some(pc => pc.categoryId === category.id))
                            label(for=`category-${category.id}`) #{category.name}


            div.mb-6
                label(for="price" class="text-gray-700 font-bold mb-2 w-full block") PRECIO
                input(type="number" name="price" value=`${Product.price}` placeholder=`${Product.price}` id="price" class="w-full px-3 py-2 leading-tight border rounded appearance-none focus:outline-none focus:shadow-outline")

            div.mb-4
                label(for="imageFile" class="text-gray-700 font-bold mb-2 block") IMAGEN
                input(type="file" name="imageFile" id="imageFile" class="w-full px-3 py-2 leading-tight border rounded appearance-none focus:outline-none focus:shadow-outline")

            div.flex.items-center.justify-between
                button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Editar 


        #container-products.min-h-screen.max-h-screen.overlfow-auto
            .card.bg-white.rounded-lg.overflow-hidden.shadow-2xl.m-4.flex.border(id=`card-${Product.id}`)

                img(src=`/${Product.imageUrl}`, alt=Product.name, id="product-image" class="w-1/3 h-48 object-contain")
                div(class="w-1/2 p-4")
                    h3.text-lg.font-bold.mb-2#product-name #{Product.name}
                    p.text-gray-600#product-description #{Product.description}
                    p.text-gray-600#product-availavility  #{Product.availavility}
                    p.text-gray-600#product-price  $ #{Product.price}


                    div.mb-2
                        label(for="productCategories" class="text-gray-700 font-bold") CATEGORIAS
                        div.flex.flex-wrap#product-categories
                            each pc in ProductCategory
                                div(key=pc.id class="mr-4 mb-2")
                                    span(class="text-blue-500 font-semibold") #{pc.Category.name}

