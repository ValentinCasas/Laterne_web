extends layout_tailwind


block content

    title Editar

    head 
        script(src="/form_edit_product.js" defer)

        script(src="/drag_and_drop.js" defer)
        link(rel="stylesheet" href="/dist/drag_and_drop.css")

    body

        div(class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-2 p-4 ")

            form(id="form_edit_product" class="h-full  p-6  overflow-hidden")
                input(type="hidden", value=Product.id, name="id")

                .w-full
                    .relative.h-10.w-full(class='min-w-[200px]')
                        input.peer.h-full.w-full.border.border-blue-gray-200.bg-transparent.px-3.font-sans.text-sm.font-normal.text-blue-gray-700.outline.outline-0.transition-all(type="text" name="name" value=`${Product.name}` placeholder=`${Product.name}` id="name" class='rounded-[7px] py-6 placeholder-shown:border placeholder-shown:border-blue-gray-200 placeholder-shown:border-t-blue-gray-200 focus:border-2 focus:border-pink-500 focus:border-t-transparent focus:outline-0 disabled:border-0 disabled:bg-blue-gray-50' )
                        label.pointer-events-none.absolute.left-0.flex.h-full.w-full.select-none.font-normal.leading-tight.text-blue-gray-400.transition-all(class="before:content[' '] after:content[' '] -top-1.5 text-[11px] before:pointer-events-none before:mt-[6.5px] before:mr-1 before:box-border before:block before:h-1.5 before:w-2.5 before:rounded-tl-md before:border-t before:border-l before:border-blue-gray-200 before:transition-all after:pointer-events-none after:mt-[6.5px] after:ml-1 after:box-border after:block after:h-1.5 after:w-2.5 after:flex-grow after:rounded-tr-md after:border-t after:border-r after:border-blue-gray-200 after:transition-all peer-placeholder-shown:text-sm peer-placeholder-shown:leading-[3.75] peer-placeholder-shown:text-blue-gray-500 peer-placeholder-shown:before:border-transparent peer-placeholder-shown:after:border-transparent peer-focus:text-[11px] peer-focus:leading-tight peer-focus:text-pink-500 peer-focus:before:border-t-2 peer-focus:before:border-l-2 peer-focus:before:border-pink-500 peer-focus:after:border-t-2 peer-focus:after:border-r-2 peer-focus:after:border-pink-500 peer-disabled:text-transparent peer-disabled:before:border-transparent peer-disabled:after:border-transparent peer-disabled:peer-placeholder-shown:text-blue-gray-500")
                            | NOMBRE

                .w-full.my-10
                    .relative.h-10.w-full(class='min-w-[200px]')
                        input.peer.h-full.w-full.border.border-blue-gray-200.bg-transparent.px-3.font-sans.text-sm.font-normal.text-blue-gray-700.outline.outline-0.transition-all(type="text" name="description" value=`${Product.description}` placeholder=`${Product.description}` id="description" class='rounded-[7px] py-6 placeholder-shown:border placeholder-shown:border-blue-gray-200 placeholder-shown:border-t-blue-gray-200 focus:border-2 focus:border-pink-500 focus:border-t-transparent focus:outline-0 disabled:border-0 disabled:bg-blue-gray-50' )
                        label.pointer-events-none.absolute.left-0.flex.h-full.w-full.select-none.font-normal.leading-tight.text-blue-gray-400.transition-all(class="before:content[' '] after:content[' '] -top-1.5 text-[11px] before:pointer-events-none before:mt-[6.5px] before:mr-1 before:box-border before:block before:h-1.5 before:w-2.5 before:rounded-tl-md before:border-t before:border-l before:border-blue-gray-200 before:transition-all after:pointer-events-none after:mt-[6.5px] after:ml-1 after:box-border after:block after:h-1.5 after:w-2.5 after:flex-grow after:rounded-tr-md after:border-t after:border-r after:border-blue-gray-200 after:transition-all peer-placeholder-shown:text-sm peer-placeholder-shown:leading-[3.75] peer-placeholder-shown:text-blue-gray-500 peer-placeholder-shown:before:border-transparent peer-placeholder-shown:after:border-transparent peer-focus:text-[11px] peer-focus:leading-tight peer-focus:text-pink-500 peer-focus:before:border-t-2 peer-focus:before:border-l-2 peer-focus:before:border-pink-500 peer-focus:after:border-t-2 peer-focus:after:border-r-2 peer-focus:after:border-pink-500 peer-disabled:text-transparent peer-disabled:before:border-transparent peer-disabled:after:border-transparent peer-disabled:peer-placeholder-shown:text-blue-gray-500")
                            | DESCRIPCION

                .w-full.my-10
                    .relative.h-10.w-full(class='min-w-[200px]')
                        input.peer.h-full.w-full.border.border-blue-gray-200.bg-transparent.px-3.font-sans.text-sm.font-normal.text-blue-gray-700.outline.outline-0.transition-all(type="number" name="price" value=`${Product.price}` placeholder=`${Product.price}`  id="price" class='rounded-[7px] py-6 placeholder-shown:border placeholder-shown:border-blue-gray-200 placeholder-shown:border-t-blue-gray-200 focus:border-2 focus:border-pink-500 focus:border-t-transparent focus:outline-0 disabled:border-0 disabled:bg-blue-gray-50' )
                        label.pointer-events-none.absolute.left-0.flex.h-full.w-full.select-none.font-normal.leading-tight.text-blue-gray-400.transition-all(class="before:content[' '] after:content[' '] -top-1.5 text-[11px] before:pointer-events-none before:mt-[6.5px] before:mr-1 before:box-border before:block before:h-1.5 before:w-2.5 before:rounded-tl-md before:border-t before:border-l before:border-blue-gray-200 before:transition-all after:pointer-events-none after:mt-[6.5px] after:ml-1 after:box-border after:block after:h-1.5 after:w-2.5 after:flex-grow after:rounded-tr-md after:border-t after:border-r after:border-blue-gray-200 after:transition-all peer-placeholder-shown:text-sm peer-placeholder-shown:leading-[3.75] peer-placeholder-shown:text-blue-gray-500 peer-placeholder-shown:before:border-transparent peer-placeholder-shown:after:border-transparent peer-focus:text-[11px] peer-focus:leading-tight peer-focus:text-pink-500 peer-focus:before:border-t-2 peer-focus:before:border-l-2 peer-focus:before:border-pink-500 peer-focus:after:border-t-2 peer-focus:after:border-r-2 peer-focus:after:border-pink-500 peer-disabled:text-transparent peer-disabled:before:border-transparent peer-disabled:after:border-transparent peer-disabled:peer-placeholder-shown:text-blue-gray-500")
                            | PRECIO

                .relative.h-16.w-full(class='min-w-[200px]')
                    select.peer.h-full.w-full.border.border-blue-gray-200.border-t-transparent.bg-transparent.px-3.font-sans.text-sm.font-normal.text-blue-gray-700.outline.outline-0.transition-all(name="availavility"  id="availavility" class='rounded-[7px] py-2 placeholder-shown:border placeholder-shown:border-blue-gray-200 placeholder-shown:border-t-blue-gray-200 empty:!bg-red-500 focus:border-2 focus:border-pink-500 focus:border-t-transparent focus:outline-0 disabled:border-0 disabled:bg-blue-gray-50')
                        option(value="agotado" selected=Product.availavility==="agotado") Agotado
                        option(value="disponible" selected=Product.availavility==="disponible") Disponible
                    label.pointer-events-none.absolute.left-0.flex.h-full.w-full.select-none.font-normal.leading-tight.text-blue-gray-400.transition-all(class="before:content[' '] after:content[' '] -top-1.5 text-[11px] before:pointer-events-none before:mt-[6.5px] before:mr-1 before:box-border before:block before:h-1.5 before:w-2.5 before:rounded-tl-md before:border-t before:border-l before:border-blue-gray-200 before:transition-all after:pointer-events-none after:mt-[6.5px] after:ml-1 after:box-border after:block after:h-1.5 after:w-2.5 after:flex-grow after:rounded-tr-md after:border-t after:border-r after:border-blue-gray-200 after:transition-all peer-placeholder-shown:text-sm peer-placeholder-shown:leading-[3.75] peer-placeholder-shown:text-blue-gray-500 peer-placeholder-shown:before:border-transparent peer-placeholder-shown:after:border-transparent peer-focus:text-[11px] peer-focus:leading-tight peer-focus:text-pink-500 peer-focus:before:border-t-2 peer-focus:before:border-l-2 peer-focus:before:border-pink-500 peer-focus:after:border-t-2 peer-focus:after:border-r-2 peer-focus:after:border-pink-500 peer-disabled:text-transparent peer-disabled:before:border-transparent peer-disabled:after:border-transparent peer-disabled:peer-placeholder-shown:text-blue-gray-500")
                        | DISPONIBILIDAD


                h3.mb-5.text-md.text-gray-900.mt-5.ml-2 CATEGORIAS
                ul.grid.w-full.gap-6.h-60.overflow-auto.mb-10(class='md:grid-cols-1')
                    each category in Categories
                        li
                            input.hidden.peer(type='checkbox' name="categoryIds" id=`category-${category.id}`  value=category.id checked=ProductCategory.some(pc => pc.categoryId === category.id))
                            label.inline-flex.items-center.justify-between.w-full.p-5.text-gray-500.bg-white.border-2.border-gray-200.rounded-lg.cursor-pointer(for=`category-${category.id}` class='dark:hover:text-black dark:border-gray-100 peer-checked:bg-blue-600 hover:text-black dark:peer-checked:text-gray-300 peer-checked:text-gray-600 hover:bg-blue-600 dark:text-gray-400  dark:hover:bg-blue-200')
                                .grid.grid-cols-2
                                    div
                                        img(src= "/" + category.imageUrl).h-12
                                    div
                                        .w-full.text-lg.font-semibold #{category.name}
                                        .w-full.text-sm #{category.description}

                div.mb-3.container
                    .header
                        svg(viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
                            g#SVGRepo_bgCarrier(stroke-width="0")
                            g#SVGRepo_tracerCarrier(stroke-linecap="round" stroke-linejoin="round")
                            g#SVGRepo_iconCarrier
                                path(d="M7 10V9C7 6.23858 9.23858 4 12 4C14.7614 4 17 6.23858 17 9V10C19.2091 10 21 11.7909 21 14C21 15.4806 20.1956 16.8084 19 17.5M7 10C4.79086 10 3 11.7909 3 14C3 15.4806 3.8044 16.8084 5 17.5M7 10C7.43285 10 7.84965 10.0688 8.24006 10.1959" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
                        p imagen
                    label.footer(for="imageFile")
                        svg(fill="#000000" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg")
                            g#SVGRepo_bgCarrier(stroke-width="0")
                            g#SVGRepo_tracerCarrier(stroke-linecap="round" stroke-linejoin="round")
                            g#SVGRepo_iconCarrier
                                path(d="M15.331 6H8.5v20h15V14.154h-8.169")
                                path(d="M18.153 6h-.009v5.342H23.5v-.002")
                        p Nada seleccionado
                        svg(viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
                            g#SVGRepo_bgCarrier(stroke-width="0")
                            g#SVGRepo_tracerCarrier(stroke-linecap="round" stroke-linejoin="round")
                            g#SVGRepo_iconCarrier
                                path(d="M5.16565 10.1534C5.07629 8.99181 5.99473 8 7.15975 8H16.8402C18.0053 8 18.9237 8.9918 18.8344 10.1534L18.142 19.1534C18.0619 20.1954 17.193 21 16.1479 21H7.85206C6.80699 21 5.93811 20.1954 5.85795 19.1534L5.16565 10.1534Z" stroke="#000000" stroke-width="2")
                                path(d="M19.5 5H4.5" stroke="#000000" stroke-width="2" stroke-linecap="round")
                                path(d="M10 3C10 2.44772 10.4477 2 11 2H13C13.5523 2 14 2.44772 14 3V5H10V3Z" stroke="#000000" stroke-width="2")
                    input#file(type="file" name="imageFile" accept=".jpg, .jpeg, .png, .webp, ")


                div.flex.items-center.justify-end
                    button(type="submit" class="bg-blue-500 hover:bg-blue-700 mt-4 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Editar 


            #container-products.h-screen.overflow-auto
                .grid.grid-cols-1.card.relative.bg-white.rounded-lg.overflow-hidden.shadow-2xl.mb-4.flex.border(id=`card-${Product.id}`)

                    img(src=`/${Product.imageUrl}`, alt=Product.name, class="w-full h-48 object-contain rounded-t-lg")#product-image

                    div(class="w-full p-4")
                        h3.text-lg.font-bold.mb-2.ml-2#product-name #{Product.name}
                        details(class="border rounded-md overflow-hidden shadow-md bg-white my-2")
                            summary(class="bg-gray-200 p-4 cursor-pointer") Descripción del Producto
                            div(class="p-4")
                                p.text-gray-600#product-description #{Product.description}
                        p.text-gray-600#product-availavility.ml-2  #{Product.availavility}
                        p.text-gray-600#product-price.ml-2  $ #{Product.price}


                        div.mb-2.p-2
                            label(for="productCategories" class="text-gray-700 font-bold") CATEGORIAS
                            div.flex.flex-wrap.my-2#product-categories
                                each pc in ProductCategory
                                    div(key=pc.id class="mr-4 mb-2 p-2 bg-gray-200 rounded-md")
                                        span(class="text-blue-500 font-semibold") #{pc.Category.name}


