                    span.visually-hidden Previous
                    span.icon.arrow-left(aria-hidden='true')
                  button.next
                    span.visually-hidden Next
                    span.icon.arrow-right(aria-hidden='true')




    .col.col-md-12.bg-black.container-testimonial
      .px-5.d-flex.justify-content-center.testimonial
        h2.text-white.text-center.itc ESTO ES LO QUE OPINA LA GENTE DE NOSOTROS



      .testimonial-reel
        each testimonial, index in Testimonials
          - const imageUrlIndex = index % ImagesUrls.length;
          div 
            .box
              figure.image
                img.img-fluid.rounded-circle(src=`${ImagesUrls[imageUrlIndex]}`)
              div.test-component
                article.test-title
