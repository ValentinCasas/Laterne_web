extends layout_tailwind


block content

    title Editar

    head 

        script(src="/form_edit_category.js" defer)
        link(rel="stylesheet" href="/category.css")

    body



        form(id="form_edit_category" class="max-w-md mx-auto mb-8 mt-32 p-6 bg-white rounded shadow-2xl")
            div.mb-4
                label(for="name" class="text-gray-700 font-bold mb-2 block") NOMBRE
                input(type="text" name="name" value=`${Category.name}` placeholder=`${Category.name}` id="name" class="w-full px-3 py-2 leading-tight border rounded appearance-none focus:outline-none focus:shadow-outline")

            div.mb-6
                label(for="description" class="text-gray-700 font-bold mb-2 block") DESCRIPCION
                input(type="text" name="description" value=`${Category.description}` placeholder=`${Category.description}` id="description" class="w-full px-3 py-2 leading-tight border rounded appearance-none focus:outline-none focus:shadow-outline")

            div.flex.mb-4.max-h-screen.overflow-y-scroll
                label(for="selectedImage" class="text-gray-700 font-bold mb-2 block") IMAGEN

            div.w-full.mb-4.max-h-screen.overflow-hidden
                .swiper-container-categories.container-beer
                    .swiper-wrapper
                        each image in Images
                            .swiper-slide.py-0.flex.justify-center.border.rounded-md
                                if image.name === Category.imageUrl
                                    img(src=image.path, alt=image.name, class="selectable-image max-h-24 w-auto selected", data-name=image.name)
                                else
                                    img(src=image.path, alt=image.name, class="selectable-image max-h-24 w-auto", data-name=image.name)

            input(type="hidden" value=`${Category.imageUrl}`  name="selectedImage" id="selectedImage")
            input(type="hidden" value=`${Category.id}`  name="id" )


            div.flex.items-center.justify-between
                button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Editar 




        #container-categories.min-h-screen.max-h-screen.overlfow-auto

                .card.relative.bg-white.rounded-lg.overflow-hidden.shadow-2xl.m-4.flex.border(id=`card-${Category.id}`)
                    img(src=`/${Category.imageUrl}`, id="category-image", alt=Category.name, class="w-1/3 h-48 object-contain")
                    div(class="w-1/2 p-4")
                        h3.text-lg.font-bold.mb-2#category-name #{Category.name}
                        p.text-gray-600#category-description #{Category.description}
                        div.flex.items-center.justify-between.mt-4
        