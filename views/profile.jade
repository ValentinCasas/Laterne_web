extends layout_tailwind


block content

    title Perfil

    head 

        script(src="/form_edit_profile.js" defer)
        link(rel="stylesheet" href="/dist/profile.css")

    body

        form.space-y-8.divide-y.divide-gray-200.p-8#form-update-profile
            input(type="hidden", name="id" value=User.id)
            .space-y-8.divide-y.divide-gray-200(class='sm:space-y-5').border.rounded-md.p-4
                .space-y-6(class='sm:space-y-5')
                    div
                        h3.text-lg.font-medium.leading-6.text-gray-900 Perfil
                        p.mt-1.max-w-2xl.text-sm.text-gray-500 This information will be displayed publicly so be careful what you share.
                    .space-y-6(class='sm:space-y-5')
                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='name' class='sm:mt-px sm:pt-2') Nombre
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                .flex.max-w-lg.rounded-md.shadow-sm
                                    span.inline-flex.items-center.rounded-l-md.border.border-r-0.border-gray-300.bg-gray-50.px-3.text-gray-500(class='sm:text-sm') Me llamo/
                                    input#name.block.w-full.min-w-0.flex-1.rounded-none.rounded-r-md.border-gray-300.text-black.px-2(type='text' name='name' placeholder=User.name autocomplete='username' class='focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm')
                        div(class='sm:grid sm:grid-cols-3 sm:items-center sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='photo') Foto
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                .flex.items-center
                                    span.h-12.w-12.overflow-hidden.rounded-full.bg-gray-100.border
                                        img(src=`/${User.imageUrl}`).h-full
                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='cover-photo' class='sm:mt-px sm:pt-2') Cambiar foto
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                .flex.max-w-lg.justify-center.rounded-md.border-2.border-dashed.border-gray-300.px-6.pt-5.pb-6
                                    .space-y-1.text-center
                                        svg.mx-auto.h-12.w-12.text-gray-400(stroke='currentColor' fill='none' viewbox='0 0 48 48' aria-hidden='true')
                                            path(d='M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                        .flex.text-sm.text-gray-600
                                            label.relative.cursor-pointer.rounded-md.bg-white.font-medium.text-indigo-600(for='imageFile' class='focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:text-indigo-500')
                                                span SELECCIONAR IMAGEN
                                                input#imageFile.sr-only(name='imageFile' type='file')
                                            //p.pl-1 or drag and drop
                                        //p.text-xs.text-gray-500 PNG, JPG, GIF up to 10MB
                .space-y-6.pt-8(class='sm:space-y-5 sm:pt-10')
                    div
                        h3.text-lg.font-medium.leading-6.text-gray-900 Información empresarial
                        p.mt-1.max-w-2xl.text-sm.text-gray-500 Use a permanent address where you can receive mail.
                    .space-y-6(class='sm:space-y-5')

                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='email' class='sm:mt-px sm:pt-2') Email 
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                input#email.block.w-full.max-w-lg.rounded-md.border-gray-300.shadow-sm(name='email' type='email' placeholder=User.email autocomplete='email' class='focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm')
                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='currentPassword' class='sm:mt-px sm:pt-2') Contraseña actual
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                input#currentPassword.block.w-full.max-w-lg.rounded-md.border-gray-300.shadow-sm(type='password' name='currentPassword' class='focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm')
                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='currentPassword' class='sm:mt-px sm:pt-2') Nueva contraseña
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                input#newPassword.block.w-full.max-w-lg.rounded-md.border-gray-300.shadow-sm(type='password' name='newPassword' class='focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm')
                       
                      
                      

            .pt-5
                .flex.justify-end
                    button.ml-3.inline-flex.justify-center.rounded-md.border.border-transparent.bg-indigo-600.py-2.px-4.text-sm.font-medium.text-white.shadow-sm(type='submit' class='hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2') Editar
