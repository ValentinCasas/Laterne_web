extends layout_tailwind


block content

    title Info

    head 

        link(rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css")
        script(src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js")

        link(rel='stylesheet', href='/dist/info.css')
        script(src="/form_info.js" defer)


    body

 

        form.space-y-8.divide-y.divide-gray-200.p-8#form_info

            input#input-latitude(class="w-full shadow-inner p-4 border-0" type="hidden" value=`${BusinessInfo.latitude}` name="latitude" placeholder=`${BusinessInfo.latitude}`)
            input#input-longitude(class="w-full shadow-inner p-4 border-0" type="hidden" value=`${BusinessInfo.longitude}` name="longitude" placeholder=`${BusinessInfo.longitude}`)

            .space-y-8.divide-y.divide-gray-200(class='sm:space-y-5').border.rounded-md.p-4
                .space-y-6(class='sm:space-y-5')
                    div
                        h3.text-lg.font-medium.leading-6.text-gray-900 Información de LATERNE
                        p.mt-1.max-w-2xl.text-sm.text-gray-500 This information will be displayed publicly so be careful what you share.
                    .space-y-6(class='sm:space-y-5')
                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='adress' class='sm:mt-px sm:pt-2') Dirección
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                .flex.max-w-lg.rounded-md.shadow-sm
                                    span.inline-flex.items-center.rounded-l-md.border.border-r-0.border-gray-300.bg-gray-50.px-3.text-gray-500(class='sm:text-sm') Descripción/
                                    input#adress.block.w-full.min-w-0.flex-1.rounded-none.rounded-r-md.border-gray-300.text-black.px-2(type='text' name='address' value=BusinessInfo.address placeholder=BusinessInfo.address  class='focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm')

                        div(class='map-container sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            #map

                .space-y-6.pt-8(class='sm:space-y-5 sm:pt-10')
                    div
                        h3.text-lg.font-medium.leading-6.text-gray-900 Contacto 
                        p.mt-1.max-w-2xl.text-sm.text-gray-500 Use a permanent address where you can receive mail.
                    .space-y-6(class='sm:space-y-5')

                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='phoneNumber' class='sm:mt-px sm:pt-2') Telefono 
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                input#phoneNumber.block.w-full.max-w-lg.rounded-md.border-gray-300.shadow-sm(value=`${BusinessInfo.phoneNumber}` type="tel" name="phoneNumber" placeholder=`${BusinessInfo.phoneNumber}` class='focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm')

                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='email' class='sm:mt-px sm:pt-2') Email
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                input#email.block.w-full.max-w-lg.rounded-md.border-gray-300.shadow-sm(type="email" value=`${BusinessInfo.email}` name="email" placeholder=`${BusinessInfo.email}` class='focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm')

                .space-y-6.pt-8(class='sm:space-y-5 sm:pt-10')
                    div
                        h3.text-lg.font-medium.leading-6.text-gray-900 Redes Sociales 
                        p.mt-1.max-w-2xl.text-sm.text-gray-500 Use a permanent address where you can receive mail.
                    .space-y-6(class='sm:space-y-5')

                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='facebook' class='sm:mt-px sm:pt-2') Facebook 
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                input#facebook.block.w-full.max-w-lg.rounded-md.border-gray-300.shadow-sm(type="text" value=`${BusinessInfo.facebookUrl}` name="facebookUrl" placeholder=`${BusinessInfo.facebookUrl}` class='focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm')

                        div(class='sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5')
                            label.block.text-sm.font-medium.text-gray-700(for='instagram' class='sm:mt-px sm:pt-2') Instagram
                            .mt-1(class='sm:col-span-2 sm:mt-0')
                                input#instagram.block.w-full.max-w-lg.rounded-md.border-gray-300.shadow-sm(type="text" value=`${BusinessInfo.instagramUrl}` name="instagramUrl" placeholder=`${BusinessInfo.instagramUrl}` class='focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm')

            .pt-5
                .flex.justify-end
                    button.ml-3.inline-flex.justify-center.rounded-md.border.border-transparent.bg-indigo-600.py-2.px-4.text-sm.font-medium.text-white.shadow-sm(type='submit' class='hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2') Editar
